

@model SMECommerce.App.Models.ProductModels.ProductCreate
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Product Create</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="code">Product Code</label>
                <input asp-for="ProductCode" class="form-control" placeholder="Code">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <label for="code">Product Code</label>
                <input asp-for="ManufacturerDate" class="form-control" placeholder="ManufacturerDate">
            </div>
            <div class="form-group">
                <label for="code">Product price</label>
                <input asp-for="Price" class="form-control" placeholder="price">
            </div>

            <div class="form-group">
                <label for="name">Category name</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@Model.CategoryList"></select>

            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>
